---
import Layout from '@/layouts/PageLayout.astro';
import type { MetaData } from '@/types';
import ReactDistribuidorForm from '@/components/react/widgets/ReactDistribuidorForm';
import Banner from '@/components/MiddleBanner.astro';
import WidgetWrapper from '@/components/ui/WidgetWrapper.astro';

const metadata: MetaData = {
  title: 'Seja um revendedor',
};

const siteKey = import.meta.env.PUBLIC_GOOGLE_CAPTCHA_SITEKEY;
const apiUrl = import.meta.env.PUBLIC_API_BASE_URL;
---

<Layout metadata={metadata}>
  <section class="first:mt-12 last:mb-12">
    <Banner class="mt-0! pt-2!" />
    <WidgetWrapper>
      <div class="m-4 md:my-10">
        <h4 class="self-start text-2xl! uppercase md:text-4xl!">Seja um revendedor</h4>
        <ul class="font-poppins flex list-disc flex-col gap-8 px-4 [&_li]:text-[24px] mb-4 ml-4">
          <li>Preencha o formul√°rio abaixo para que nosso time possa entrar em contato.</li>
        </ul>
        <ReactDistribuidorForm client:load apiUrl={apiUrl} recaptchaSiteKey={siteKey} />
      </div>
    </WidgetWrapper>
    <Banner />
  </section>
</Layout>

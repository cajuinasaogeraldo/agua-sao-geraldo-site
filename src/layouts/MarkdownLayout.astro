---
import Layout from '@/layouts/AdminLayout.astro';
import type { MetaData } from '@/types';

export interface Props {
  frontmatter: {
    title?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
};
---

<Layout frontmatter={metadata}>
  <section class="mx-auto max-w-4xl px-4 pt-24 pb-12 sm:px-6 md:px-8 md:pt-28">
    <h1 class="font-heading text-3xl font-bold tracking-tighter md:text-5xl">
      {frontmatter.title}
    </h1>
    <div
      class="space-y-10 font-poppins prose prose-lg prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 prose-img:rounded-md prose-img:shadow-lg mt-8 max-w-4xl page-content"
    >
      <slot />
    </div>
  </section>
</Layout>

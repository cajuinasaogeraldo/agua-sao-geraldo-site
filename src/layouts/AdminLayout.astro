---
import Button from '@/components/ui/Button.astro';
import Layout from '@/layouts/Layout.astro';
import type { MetaData } from '@/types';

export interface Props {
  frontmatter: {
    title?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
  robots: {
    index: false,
    follow: false,
  },
};
---

<Layout metadata={metadata}>
  <main class="mx-auto max-w-4xl px-4 pt-12 pb-12 sm:px-6 md:px-8">
    <Button variant="primary" href="/admin/" class="mb-7 inline-block"> ‚Üê Voltar ao CMS </Button>
    <h1 class="font-heading text-3xl font-bold tracking-tighter md:text-5xl mb-8">
      {frontmatter.title}
    </h1>
    <div
      class="space-y-6 font-poppins prose prose-lg prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 prose-img:rounded-md prose-img:shadow-lg max-w-4xl page-content"
    >
      <slot />
    </div>
  </main>
</Layout>

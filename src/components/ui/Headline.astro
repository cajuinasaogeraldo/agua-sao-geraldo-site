---
import type { Headline } from '@/types';
import { twMerge } from 'tailwind-merge';
interface Props extends Headline {
  classes?: {
    container?: string;
    title?: string;
    subtitle?: string;
  };
}
const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
} = Astro.props;
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge('mb-8 text-center md:mx-auto md:mb-12', classes.container)}>
      {tagline && (
        <p class="text-secondary text-base font-bold tracking-wide uppercase " set:html={tagline} />
      )}
      {title && (
        <h2
          class={twMerge(
            'leading-tighter font-heading text-heading text-3xl font-bold tracking-tighter',
            classes.title,
          )}
          set:html={title}
        />
      )}

      {subtitle && <p class={twMerge('text-muted mt-4', classes.subtitle)} set:html={subtitle} />}
    </div>
  )
}

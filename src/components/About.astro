---
import Image from '@/components/common/Image.astro';
import WidgetWrapper from './ui/WidgetWrapper.astro';
import Button from './ui/Button.astro';
import Headline from './ui/Headline.astro';

import folha from '@/assets/images/site/folha.webp';
import garrafao from '@/assets/images/site/garrafao.webp';

const items = [
  {
    title: 'Potássio',
    qtd: '14,430',
  },
  {
    title: 'Magnésio',
    qtd: '11,641',
  },
  {
    title: 'Cálcio',
    qtd: '11,037',
  },
  {
    title: 'Sódio',
    qtd: '5,218',
  },
  {
    title: 'Fluoreto',
    qtd: '0,04',
  },
  {
    title: 'Sulfato',
    qtd: '18,47',
  },
  {
    title: 'Cloreto',
    qtd: '17,76',
  },
  {
    title: 'Bicarbonato',
    qtd: '68,78',
  },
];
---

<WidgetWrapper fullWidth>
  <WidgetWrapper
    containerClass="mt-0! pt-0! grid grid-cols-[minmax(80px,210px)_minmax(0,80px)] md:grid-cols-[1fr_minmax(80px,1fr)] place-items-center p-2 md:p-7"
  >
    <div class="flex min-w-[104px] max-w-xl flex-col gap-1 md:gap-7 py-6 md:py-8">
      <h1>São Geraldo Águas Minerais</h1>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed dvo eiusmod tempor incididunt
        ut labore lacus vel facilisis.
      </p>
      <Button
        class="max-w-2/5 md:max-w-[200px] text-xs md:text-2xl py-2"
        variant="primary"
        href="/sobre/"
      >
        Ver Mais
      </Button>
    </div>
    <div class="relative h-[199px] w-[200px] -right-15 md:h-[600px] md:w-[500px]">
      <Image
        layout="responsive"
        class="absolute -bottom-10 md:-bottom-9"
        loading="eager"
        fetchpriority="high"
        decoding="auto"
        src={garrafao}
        alt="Garrafão"
      />
    </div>
  </WidgetWrapper>
  <div id="about" class="bg-agua-primary-blue relative min-h-[250px] w-full p-3 pt-8 md:p-12">
    <Headline
      title="Água Não é Tudo Igual,"
      subtitle="por isso conheça a nossa!"
      classes={{
        container: 'mb-4!',
        title: 'text-white! mb-0!',
        subtitle:
          'text-agua-secondary-blue! mx-auto! w-fit! font-medium! text-sm! md:text-4xl! py-0! my-0!',
      }}
    />
    <div class="mt-4 grid grid-cols-3 md:grid-cols-4 items-center justify-center gap-2 md:gap-8">
      {
        items.map((item) => (
          <div class="flex items-center justify-start gap-2 md:gap-4">
            <Image src={folha} alt="Folha" layout="constrained" class="size-7! md:size-30!" />
            <div class="flex-1">
              <h3 class="mb-0! text-xs! md:text-2xl! font-extrabold! text-white!">{item.title}</h3>
              <p class="text-agua-primary-green text-xs! md:text-xl!">{item.qtd}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</WidgetWrapper>

---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '@/utils/permalinks';
import { I18N } from 'astrowind:config';
import Button from '@/components/ui/Button.astro';
import { twMerge } from 'tailwind-merge';

const { textDirection } = I18N;

interface Props {
  class?: string;
  buttonClass?: string;
}

const { class: className = '', buttonClass = '' } = Astro.props;
---

<div
  class={twMerge(
    'px-6 pt-8 pb-12 sm:px-6 md:pt-4 md:pb-20 mx-auto flex max-w-5xl w-full justify-start',
    className,
  )}
>
  <Button variant="primary" class:list={['px-3 md:px-3', buttonClass]} href={getBlogPermalink()}>
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="mr-1 -ml-1.5 h-5 w-5 rtl:-mr-1.5 rtl:ml-1" />
      ) : (
        <Icon name="tabler:chevron-left" class="mr-1 -ml-1.5 h-5 w-5 rtl:-mr-1.5 rtl:ml-1" />
      )
    } Voltar para not√≠cias
  </Button>
</div>
